generator client {
  provider = "prisma-client-js"
  //output   = "../src/generated/prisma"
  seed = "seed.ts"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  firstname  String?
  lastname  String?
  phonenumber String @unique()
  email String @unique
  rentals Rental[] // 1 user to many cars
}

model Car{
  id Int @id @default(autoincrement())
  maker String
  model String
  year String
  rentals Rental[]
}

model Rental{
  id Int @id @default(autoincrement()) // Primary key
  user User @relation (fields: [userId], references: [id]) //Define relation field - not an exactly field
  userId Int //Foreign key comes from relation field
  car Car @relation (fields: [carId], references: [id])
  carId Int
  rentedAt DateTime @default(now())
  returnedAt DateTime?
}